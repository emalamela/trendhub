<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Set to tint overscroll -->
        <item name="colorPrimary">@color/status_bar_background</item>
        <!-- Set to tint status bar -->
        <item name="colorPrimaryDark">@color/status_bar_background</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/consolas</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RepositoryLanguageChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/repository_detail_chip_background_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
